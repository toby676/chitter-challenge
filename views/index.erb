<h1> WELCOME TO CHITTER </h1>

<p class='currentpeeps'> Please see the most current peeps below: </p>

<ul id='peeps'>
  <% peeps.reverse.each do |peep| %>
    <li>
      <%= peep.content %>

    <p class='createdby'><i>Created: <%= peep.created_at.strftime("%A, %b %d %r") %> by <b> <%= User.get(peep.user_id).username %> </b> </i></p>
      <form action='/comments' method='post'>
      <input name='content' type='text'>
      <input name='peep' value="<% peep %>" type='hidden'>
      <input type='submit' value='Comment'>
    </form>
    <ul id='peeps'>
      <% peeps.comments.reverse.each do |comment| %>
      <li> <%= comments.content %>
      </li>
      <% end %>
    </li>
  <% end %>
</ul>
